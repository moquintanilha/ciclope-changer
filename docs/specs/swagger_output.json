{
  "openapi": "3.0.1",
  "info": {
    "version": "v0.0.1-staging",
    "title": "Ciclope Changer",
    "description": "<b>Ciclope-Changer</b> Service API Documentation",
    "contact": {
      "name": "Infrastructure Team",
      "email": "infraestructura@mercadolibre.com"
    }
  },
  "servers": [{
    "url": "http://ciclope-staging.management-pci.com",
    "description": "Staging scope"
  }],
  "paths": {
    "/health-check": {
      "get": {
        "description": "Health check endpoint.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/action": {
      "patch": {
        "description": "Endpoint to change an FQDN associated with a VPN.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "vpnName": {
                  "example": "Conductor"
                },
                "recordId": {
                  "example": "998788de-f118-11ec-a7e6-1680a1ffe1fd"
                },
                "vpnAlternate": {
                  "example": "vpn-pico-a.partner.example.com.br"
                },
                "subDomain": {
                  "example": "partner.example.com.br"
                },
                "requester": {
                  "example": "conductor-app"
                },
                "description": {
                  "example": "This a request test."
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}
